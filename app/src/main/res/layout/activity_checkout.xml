<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/paddingMedium">

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/paddingLarge"
                        android:textColor="@color/black"
                        android:paddingHorizontal="@dimen/paddingMedium"
                        android:text="Cost Details"
                        android:textStyle="bold"
                        android:textSize="@dimen/smallText5" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small1"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/paddingMedium"
                            android:text="Subtotal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallText4" />

                        <TextView
                            android:id="@+id/subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:padding="@dimen/paddingMedium"
                            android:text="PKR 0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallText4"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/paddingMedium"
                            android:text="Tax"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallText4" />

                        <TextView
                            android:id="@+id/tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:padding="@dimen/paddingMedium"
                            android:text="11%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallText4"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small1"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/paddingMedium"
                            android:text="Total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallText4" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:padding="@dimen/paddingMedium"
                            android:text="PKR 0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/smallText4"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingMedium"
                app:cardBackgroundColor="@color/light_grey"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/paddingMedium"
                        android:paddingVertical="@dimen/paddingLarge"
                        android:text="Information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/smallText5"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small1"
                        android:background="@color/white" />

                    <EditText
                        android:id="@+id/nameBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/paddingMedium"
                        android:background="@drawable/background_2"
                        android:ems="10"
                        android:textColorHint="@color/grey"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/small7" />

                    <EditText
                        android:id="@+id/emailBox"
                        android:textColorHint="@color/grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/paddingMedium"
                        android:background="@drawable/background_2"
                        android:ems="10"
                        android:hint="Email Address"
                        android:inputType="textPersonName"
                        android:padding="@dimen/small7" />

                    <EditText
                        android:id="@+id/phoneBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/paddingMedium"
                        android:background="@drawable/background_2"
                        android:ems="10"
                        android:textColorHint="@color/grey"
                        android:hint="Phone Number"
                        android:inputType="textPersonName"
                        android:padding="@dimen/small7" />

                    <EditText
                        android:id="@+id/addressBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/paddingMedium"
                        android:background="@drawable/background_2"
                        android:ems="10"
                        android:textColorHint="@color/grey"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:padding="@dimen/small7" />

                    <EditText
                        android:id="@+id/dateBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/paddingMedium"
                        android:background="@drawable/background_2"
                        android:ems="10"
                        android:textColorHint="@color/grey"
                        android:hint="Date Shipping"
                        android:inputType="textPersonName"
                        android:padding="@dimen/small7" />

                    <EditText
                        android:id="@+id/commentBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/paddingMedium"
                        android:background="@drawable/background_2"
                        android:ems="10"
                        android:textColorHint="@color/grey"
                        android:hint="Additional Comments"
                        android:inputType="textPersonName"
                        android:padding="@dimen/small7" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingMedium"
                app:cardBackgroundColor="@color/light_grey"
                android:layout_marginBottom="@dimen/paddingMedium"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/small3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/paddingMedium"
                        android:paddingTop="@dimen/small7"
                        android:paddingRight="@dimen/paddingMedium"
                        android:paddingBottom="@dimen/small7"
                        android:text="Product Order List"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/smallText5" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small1"
                        android:background="@color/white" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cartList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/checkoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingMedium"
                android:background="@color/brown_1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="Process Checkout" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>